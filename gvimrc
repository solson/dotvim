set guifont=DejaVu\ Sans\ Mono\ 9
colorscheme jellybeans

" Disable tearoff menu items, toolbar, menus, scrollbars
set guioptions-=m
set guioptions-=t
set guioptions-=T
set guioptions-=r
set guioptions-=L

" GUI open starts in dir of buffer's file
set browsedir=buffer

" Disable the audible and visual bell
set visualbell t_vb=

set columns=85
set lines=46
